{% extends "dashboarddashboardBundle::baseEleves.html.twig" %}

{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Détail du Quizz</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <span class="alert alert-success">{{ flashMessage }}</span>
            {% endfor %}


            <!-- /.panel -->

            {{ score.fiche.title | raw }}

            {{ score.fiche.content | raw }}

            {{ form_start(form) }}



            <p class="text-primary"><strong>cocher la bonne réponse.</strong></p>

            {% for choice in fiche.choices %}
                {% set value = 'c' ~ choice.id %}
            <div class="form-group">
                <label>
                    {{ choice.contentChoice }}

                    {{ form_widget(attribute(form, value)) }}
                </label>
                </div>
            {% endfor %}








            <p>
                <input type="submit" value="Valider" class="btn"/>
            </p>




            {{ form_end(form) }}


        </div>
    </div>
    </div>




{% endblock %}
{% extends "dashboarddashboardBundle::baseEleves.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Toutes les fiches</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <h1>Fiches</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>

                    <th>titre</th>
                    <th>question</th>
                    <th>status</th>
                    <th>répondre</th>


                </tr>
                </thead>
                <tbody>
                    {% for score in scores %}
                    <tr>
                        <td> {{ score.fiche.title | raw }}</td>
                        <td> {{ score.fiche.content | raw }}</td>
                        <td>
                            {% if (score.status.nom  == "fait") %}
                                <a class='material-icons' disabled>fait</a>
                            {% else %}
                                <a class='material-icons' href="{{ url('student.fiches.make',{'id':score.id} ) }}">à faire</a>
                            {% endif %}
                        </td>
    
                        <td>
                            <td>
                                {% if (score.status.nom  == "DONE") %}
                                    <a class='material-icons' disabled>check</a>
                                {% else %}
                                    <a class='material-icons' href="{{ url('student.fiches.make',{'id':score.id} ) }}">Valider</a>
                                {% endif %}
                            </td>
                        </td>
                    {% endfor %}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
                        {% else %}
                            <a href="{{  path("student.fiches.make",{'id' : fiches.fiche.id}) }}"><button type="button" class="btn btn-warning"><i class="fa fa-bell"></i> Ã€ Faire</button></a>
                        {% endif %}</td>
                          <td>{{ fiches.note }}</td>
                      </tr>
                    {% endfor %}


                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
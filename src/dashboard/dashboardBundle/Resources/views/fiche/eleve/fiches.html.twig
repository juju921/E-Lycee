{% extends "dashboarddashboardBundle::baseEleves.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Toutes les fiches</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <h1>Fiches</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>titre</th>
                    <th>status</th>

                    <th>note</th>

                </tr>
                </thead>
                <tbody>

                      {% for fiches in fiche %}
                      <tr>
                          <td>{{ loop.index }}</td>

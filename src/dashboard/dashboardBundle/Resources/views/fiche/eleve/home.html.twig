{% extends "dashboarddashboardBundle::baseEleves.html.twig" %}

{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">QCM</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <span class="alert alert-success">{{ flashMessage }}</span>
            {% endfor %}

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"
                                   aria-expanded="false" aria-controls="collapseTwo">
                                    <i class="fa fa-pie-chart fa-fw"></i> Statistiques
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel"
                             aria-labelledby="headingTwo">
                            <div class="panel-body">
                                <p>Vos statistiques pour les QCM</p>



                                {% for score in scores %}

                                   Votre score est de {{ student.scores|length }}
                                    {{ score.fiche.title | raw }}
                                    {{ score.status.nom }}

                                    {% if (score.status.nom  == "DONE") %}
                                        <a class='fa fa-check-square-o' disabled>Complété</a>
                                    {% else %}
                                        <a class='fa fa-square-o' href="{{ url('student.fiches.make',{'id':score.id} ) }}">Répondre au QCM</a>
                                    {% endif %}


                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.col-lg-8 -->
            <!-- /.panel -->
        </div>
    </div>
</div>




{% endblock %}
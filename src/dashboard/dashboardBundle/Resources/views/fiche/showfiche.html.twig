{% extends "dashboarddashboardBundle::base.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Fiches</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <a href="{{ path('dashboard.fiches.new') }}" class="btn btn-primary btn-primary-admin">Ajouter</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Quizz</th>
                    <th>Status</th>
                    <th>Voir</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>

                </tr>
                </thead>
                <tbody>
    {% for fiche in pagerfanta.currentPageResults %}



                <tr>

                    <td><a href="{{ path('dashboarddashboardBundle:dashboard:show',{'id' : fiche.id}) }}">{{ fiche.title  |raw   }}</a></td>
                    <td>

                        {% if fiche.status  ==   "1" %}
                            <a class="btn btn-success" href="{{ path('dashboard.fiches.editstatus',{'id' : fiche.id}) }}">online</a>

                        {% else %}
                            <a class="btn btn-danger" href="{{ path('dashboard.fiches.editstatus',{'id' : fiche.id}) }}">offline</a>

                        {% endif %}
                    </td>
                    <td><a href="{{ path('dashboarddashboardBundle:dashboard:show',{'id' : fiche.id}) }}"><i class="fa fa-eye"></i> Voir</a></td>
                    <td><a href="{{ path('dashboard.posts.update',{'id' : fiche.id}) }}"><i class="fa fa-pencil"></i> modifier</a></td>
                    <td><a href="{{ path('dashboard.fiches.delete',{'id' : fiche.id}) }}" id="new"><i class="fa fa-trash"></i>  supprimer</a></tdh>


                        {% endfor %}
                </tr>
                </tbody>
            </table>
            {{ pagerfanta(pagerfanta, 'twitter_bootstrap3') }}
        </div>
    </div>
{% endblock %}
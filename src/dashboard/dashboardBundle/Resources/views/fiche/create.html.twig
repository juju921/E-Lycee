    {% extends "dashboarddashboardBundle::base.html.twig" %}

{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Création d'une nouvelle fiche</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <span class="alert alert-success">{{ flashMessage }}</span>
            {% endfor %}

            <form method="POST" {{ form_enctype(form) }} class="form-horizontal" novalidate>



                <div class="form-group level">
                    {{ form_label(form.matiere, 'Matière : ') }}
                    {{ form_widget(form.matiere,{'attr' : {'placeholder':'Philosophie, Physique ... ','class':'form-control'}}) }}
                    {{ form_errors(form.matiere) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.title, 'Titre du Quizz : ') }}
                    {{ form_widget(form.title,{'attr' : {'placeholder':'Saisissez le titre du Quizz','class':'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.content, 'Question : ') }}
                    {{ form_widget(form.content,{'attr' : {'class':'form-control'}}) }}
                    {{ form_errors(form.content) }}
                </div>
                <div class="form-group level">
                    {{ form_label(form.classes, 'Classes : ') }}
                    {{ form_widget(form.classes,{'attr' : {'class':'form-control tinymce'}}) }}
                    {{ form_errors(form.classes) }}
                </div>

                <div class="form-group level">
                    {{ form_label(form.status, 'Status : ') }}
                    {{ form_widget(form.status,{'attr' : {'class':'form-control tinymce'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <ul class="tags" data-prototype="
          {% filter escape %}
            {{ include('dashboarddashboardBundle:inc:choices-prototype.html.twig', { 'form': form.choices.vars.prototype }) }}
          {% endfilter %}
        ">
                </ul>


                {{ form_widget(form._token) }}

                <p>
                    <input type="submit" value="Valider" class="btn btn-success"/>
                </p>
            </form>
        </div>
    </div>




{% endblock %}
{% extends "dashboarddashboardBundle::base.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        {% for flashMessage in app.session.flashbag.get('message') %}
            <span class="alert alert-success">{{ flashMessage }}</span>
        {% endfor %}

        <form method="POST" {{ form_enctype(form) }} class="form-horizontal" novalidate>




                <div class="form-group">
                    {{ form_label(form.titre, 'titre : ') }}
                    {{ form_widget(form.titre,{'attr' : {'placeholder':'Saisissez votre nom','class':'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.abstract, 'abstract : ') }}
                    {{ form_widget(form.abstract,{'attr' : {'class':'form-control'}}) }}
                    {{ form_errors(form.abstract) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.content, 'content : ') }}
                    {{ form_widget(form.content,{'attr' : {'class':'form-control'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.urlThumbnail, 'urlThumbnail : ') }}
                    {{ form_widget(form.urlThumbnail,{'attr' : {'class':'form-control'}}) }}
                    {{ form_errors(form.urlThumbnail) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.status, 'status : ') }}
                    {{ form_widget(form.status,{'attr' : {'class':'form-control'}}) }}
                    {{ form_errors(form.status) }}
                </div>

            <div class="form-group">
                {{ form_label(form.auteur, 'auteur : ') }}
                {{ form_widget(form.auteur,{'attr' : {'class':'form-control'}}) }}
                {{ form_errors(form.auteur) }}
            </div>


                <div class="form-group">
                    {{ form_label(form.date, 'date : ') }}
                    {{ form_widget(form.date,{'attr' : {'class':'bam_accueilbundle_evenement_debut'}}) }}
                    {{ form_errors(form.date) }}
                </div>




                {{ form_widget(form._token) }}
                <p>
                    <input type="submit" value="Valider" class="btn"/>
                </p>
            </form>
    </div>
    </div>

{% endblock %}
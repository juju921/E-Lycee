{% extends "dashboarddashboardBundle::base.html.twig" %}

{% block body %}
    <div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">panneau d'administration</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <h1>Articles</h1>
        <a href="{{ path('public.contact.form') }}" class="btn btn-primary">Ajouter</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>

                    <th>titre</th>
                    <th>auteur</th>
                    <th>status</th>
                    <th>voir</th>
                    <th>modifier</th>
                    <th>supprimer</th>

                </tr>
                </thead>
                <tbody>

                {% for post in posts %}

                <tr>
                    <td><a href="{{ path('dashboarddashboardBundle:dashboard:show',{'id' : post.id}) }}">{{ post.titre }}</a></td>
                          <td>{{ post.username }}</td>
                        <td>
                        {% if post.nom ==   "publish" %}

                            <a class="btn btn-success" href="{{ path('dashboard.posts.editstatus',{'id' : post.id}) }}">online</a>
                            {% else %}
                                <a class="btn btn-danger" href="{{ path('dashboard.posts.editstatus',{'id' : post.id}) }}">offline</a>

                            {% endif %}
                            </td>
                    <td><a href="{{ path('dashboarddashboardBundle:dashboard:show',{'id' : post.id}) }}"><i class="fa fa-eye"></i> Voir</a></td>
                    <td><a href="{{ path('dashboard.posts.update',{'id' : post.id}) }}"><i class="fa fa-pencil"></i> modifier</a></td>
                    <td><a href="{{ path('dashboard.posts.delete',{'id' : post.id}) }}" id="new"><i class="fa fa-trash"></i>  supprimer</a></tdh>


                    {% endfor %}
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
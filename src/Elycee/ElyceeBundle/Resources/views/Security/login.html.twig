{% extends "::base.html.twig" %}
{% block body %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">

                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                        <fieldset>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        
                                <label for="username" >{{ 'security.login.username'|trans }}</label>
                                <input type="text" id="username" class="form-control" autofocus="" placeholder="Username" name="        _username" value="{{ last_username }}" required="required" />
                            </div>
        
                            <div class="form-group">    
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input type="password" id="password" class="form-control" name="_password" placeholder="Password        " required="required" />
                            </div>
        
                            <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                {{ 'Se souvenir de moi'|trans }}
                                </label>
                            </div>
        
                                <!-- <input type="submit" id="_submit" name="_submit" value="Remember me" class="btn btn-lg btn-success btn-block" /> -->
        
                            <!-- Change this to a button or input when using this as a form -->

                            <input type="submit" id="_submit" name="_submit" value="{{ 'login'|trans }}" class="btn btn-lg btn-success btn-block" />


    <!--    <a href="index.html" class="btn btn-lg btn-success btn-block">Login</a> -->
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock fos_user_content %}

{% endblock %}
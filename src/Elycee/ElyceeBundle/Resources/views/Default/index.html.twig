{% extends "ElyceeElyceeBundle::base.html.twig" %}

{% block body %}

    <div class="row">
    <div class="col-lg-8 col-md-8">
    {% for posts in results %}
        {% if  posts.urlThumbnail.fileName is defined and posts.urlThumbnail.fileName != NULL %}
            {% set pictureUrl = asset("images/news/"~posts.urlThumbnail.fileName) %}
        {% else %}
            {% set pictureUrl = '' %}
        {% endif %}
        <div class="col-lg-6 col-md-6">
            <div class="thumbnail">

                    <p>

                        <a  href="{{ url('ElyceeBundle.default.actu', {'id': posts.id}) }}">     <img src=" {{ pictureUrl }}" class="img-responsive" alt="" class="img-responsive"/> </a>
                    </p>


                <div class="caption">
                    <h2>
                        <a  href="{{ url('ElyceeBundle.default.actu', {'id': posts.id}) }}">
                        {{ posts.titre }}
                            </a>
                    </h2>

                    <p>
                        {{ posts.abstract }}
                    </p>

                    <p>

                        <a class="btn btn-default btn-sm" href="{{ url('ElyceeBundle.default.actu', {'id': posts.id}) }}">Lire la suite
                            ...</a>
                    </p>

                    <p>Auteur : <a href="{{ posts.auteur }}"></a> - Publié le :{{ posts.date | date('d M Y') }}</p>
                    <a href="#"

                    <p><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> 272 commentaire(s) réagissez
                    </p>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

